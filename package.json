{
    "name": "radiant-ts",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "prebuild": "node scripts/vercel-precheck.cjs || exit 0",
        "build": "next build",
        "dev": "npm run dev:local",
        "start": "next start",
        "lint": "next lint",
        "postinstall": "prisma generate || exit 0",
        "typegen": "echo skip-typegen",
        "dev:web": "next dev -p 3000",
        "dev:server": "tsx backend/server.ts",
        "dev:all": "concurrently -k -n WEB,API \"npm:dev:web\" \"npm:dev:server\"",
        "dev:3001": "next dev -p 3001",
        "dev:local": "next dev -H 127.0.0.1 -p 3000",
        "backup": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\backup.ps1"
    },
    "devDependencies": {
        "@types/node": "^24.3.1",
        "@types/react": "19.1.12",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "eslint": "^9.35.0",
        "eslint-config-next": "^15.5.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "next": "^15.5.2",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    }
}
