{
  "name": "radiant-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:local",
    "build": "NEXTJS_IGNORE_ESLINT=1 next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "typegen": "sanity schema extract --path=src/sanity/extract.json && sanity typegen generate && rm ./src/sanity/extract.json",
    "dev:web": "next dev -p 3000",
    "dev:server": "tsx backend/server.ts",
    "dev:all": "concurrently -k -n WEB,API \"npm:dev:web\" \"npm:dev:server\"",
    "dev:3001": "next dev -p 3001",
    "dev:local": "next dev -H 127.0.0.1 -p 3000",
    "backup": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts\\\\backup.ps1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.15.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^4.2.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "feed": "^5.1.0",
    "framer-motion": "^12.23.11",
    "next": "15.4.4",
    "next-sanity": "^10.0.5",
    "nodemailer": "^7.0.6",
    "prisma": "^6.15.0",
    "react": "^19",
    "react-dom": "^19",
    "react-use-measure": "^2.1.7",
    "sanity": "^4.2.0",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.5",
    "typescript": "^5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
